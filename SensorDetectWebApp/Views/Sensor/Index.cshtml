@model List<SensorDetectWebApp.Models.Sensor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Cadastro de Sensores</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Loalização</th>
            <th scope="col"><a class="nav-link text-dark" asp-area="" asp-controller="Sensor" asp-action="Create" title="Novo Sensor"><i class='fas fa-file'></i></a></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Localizacao</td>
                <td><a class="nav-link text-dark" asp-area="" asp-controller="Sensor" asp-action="Edit" asp-route-id="@item.Id" title="Alterar"><i class='fas fa-edit'></i></a></td>
                <td><a class="nav-link text-dark" asp-area="" asp-controller="Sensor" asp-action="Delete" asp-route-id="@item.Id" title="Excluir"><i class='fas fa-trash'></i></a></td>
            </tr>
        }
    </tbody>
</table>