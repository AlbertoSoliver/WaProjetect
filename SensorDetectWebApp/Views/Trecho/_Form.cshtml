@model SensorDetectWebApp.Models.Trecho


<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SensorInId" class="control-label"></label>
            @Html.DropDownListFor(model => model.SensorInId, new SelectList(Sensor.GetAll(), "Id", "Nome"), null, new { @class = "form-control" })
            <span asp-validation-for="SensorInId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SensorOutId" class="control-label"></label>
            @Html.DropDownListFor(model => model.SensorOutId, new SelectList(Sensor.GetAll(),"Id", "Nome") , null, new { @class = "form-control" })
            <span asp-validation-for="SensorOutId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input id="botaoSubmit" type="submit" value="Gravar" class="btn btn-primary" />
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
