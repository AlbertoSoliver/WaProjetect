@model IEnumerable<SensorDetectWebApp.Models.Trecho>

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro de Sensores</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome do Trecho</th>
            <th scope="col"><a class="nav-link text-dark" asp-area="" asp-controller="Trecho" asp-action="Create" title="Novo Trecho"><i class='fas fa-file'></i></a></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td><a class="nav-link text-dark" asp-area="" asp-controller="Trecho" asp-action="Edit" asp-route-id="@item.Id" title="Alterar"><i class='fas fa-edit'></i></a></td>
                <td><a class="nav-link text-dark" asp-area="" asp-controller="Trecho" asp-action="Delete" asp-route-id="@item.Id" title="Excluir"><i class='fas fa-trash'></i></a></td>
            </tr>
        }
    </tbody>
</table>